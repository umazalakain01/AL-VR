import { Button, GroupBox, ListView, GridBox, ScrollView, VerticalBox, StandardListView, ComboBox } from "sixtyfps_widgets.60";

ClientCard := Rectangle {
    property<string> text;

    height: 50px;

    background: #c4ecff;

    border-width: 0.5px;
    border-color: black;
    border-radius: 10px;

    drop-shadow-blur: 5px;
    drop-shadow-offset-y: 1px;
    drop-shadow-color: black;

    Text {
        text: parent.text;
    }
}

ConnectionPanel := ScrollView {
    border-color: transparent;

    VerticalBox {
        for name in ["Client 1", "Client 2"] : ClientCard {
            text: name;
        }
    }
}